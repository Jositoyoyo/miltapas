{% extends 'base.html.twig' %}

{% block body %}
    
    
    <div style="" class="ui-page ui-page-theme-a ui-page-active" tabindex="0" data-url="/var/www/html/jquery.mobile-1.4.5/Theme_a/index.html" data-role="page" data-theme="a">
        <div class="ui-header ui-bar-inherit" role="banner" data-role="header" data-position="inline">
            
            <a role="button" data-role="button" href="#" class="jqm-navmenu-link ui-nodisc-icon ui-alt-icon ui-btn-right ui-btn ui-icon-bars ui-btn-icon-notext ui-corner-all">Menu</a>
        </div>
        <a id="hello">Mostrar contenido</a>
        <div id="content"></div>
        
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $('#hello').click(function () {
            $.ajax("http://localhost:8000/alerta/")
                    .done(function (html) {
                        $(html).replaceAll('#content');

                    })
                    .fail(function () {
                        console.log("error");
                    })
                    .always(function () {
                        console.log("complete");
                    });
        });
    </script>
{% endblock %}